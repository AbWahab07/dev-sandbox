{% layout none %}
{% for line_item in cart.items %}
<div class="cart__line-item" data-cart-line-item>
  <div class="cart__line-item-image">
    <img src="{{ line_item.product.featured_image | img_url: 'small' }}" alt="{{ line_item.product.description }}" />
  </div>

  <div class="cart__line-item-title">
    Title: {{ line_item.title }}
  </div>

  <div class="cart__line-item-price" data-cart-line-item-price>
    Price: {{ line_item.price }}
  </div>

  <div class="cart__line-item-remove" data-variant-id="{{ line_item.variant_id }}" data-cart-line-item-remove>
    Remove item
  </div>

  <div class="cart__line-item-quantity">
    QTY: {{ line_item.quantity }}
  </div>
</div>
{% endfor %}

<div class="subtotal">Subtotal: {{ cart.total_price }}</div>