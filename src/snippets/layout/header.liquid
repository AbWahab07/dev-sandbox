<header class="header">
  <img src="https://cdn.shopify.com/s/files/1/0167/3605/9446/files/logo.png?39558" alt="Logo" class="header__image" />

  <div class="header__cell">
    <nav class="nav">
      <ul class="nav__list">
        {% for link in linklists['main-menu'].links %}
          <li class="nav__item">
            <a href="{{ link.url }}" class="nav__link">{{ link.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
    <ul class="utility-nav">
      <li class="utility-nav__item">
        <a href="/search" class="utility-nav__link">{% include 'icon-search', with {
          classes: 'icon--search',
          title: 'search'
        } %}</a>
      </li>
      <li class="utility-nav__item">
        <a href="/cart" class="utility-nav__link">
          <span class="utility-nav__cart-count">{{ cart.item_count }}</span>
          {% include 'icon-cart', with {
            classes: 'icon--cart',
            title: 'cart'
          } %}
        </a>
      </li>
    </ul>
  </div>
</header>
